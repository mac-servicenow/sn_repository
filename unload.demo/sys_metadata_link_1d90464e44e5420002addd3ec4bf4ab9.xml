        &lt;script&gt;&lt;![CDATA[/*** Change Request Search ***/
/*** Searches only against the cmdb_ci field for active CHGs ***/

/*
Available variables:
searchTerm - search string
currSysID - sys_id of record being searched from
tableName - table of record being searched from
isNew - true/false if the record being searched from is a new record
maxResults - maximum results to return, as defined on the parent searcher
[additional fields] - Additional field variables, as specified in searcher configuration (accessible via field name, such as cmdb_ci)

Result variable:
answer - array of HTML contents or links
*/

//Get debug logging setting
var debug = gs.getProperty('sn_onesearch.debug');

//Instantiate return array
var returnArray = [];

//Set query preferences
var ordering = 'sys_created_on';
var recordTypeQuery = 'task_ci'; //Query against task_ci to catch all open changes against CI
var recordTypeLink = 'change_request'; //Links refer back to the CHG record
var encQuery = 'task.active=true^task.work_start&lt;javascript:gs.minutesAgoStart(0)^task.work_end&gt;javascript:gs.minutesAgoEnd(0)^task.sys_class_name=change_request';

//Setup query
try{
	var resultRec = new GlideRecord(recordTypeQuery);
	resultRec.addEncodedQuery(encQuery);
	//Do not return self as results
	if (tableName == recordTypeQuery)
		resultRec.addQuery('sys_id', '!=', currSysID);
	resultRec.addQuery('ci_item', cmdb_ci);
	resultRec.setLimit(maxResults);
	resultRec.orderByDesc(ordering);
	resultRec.query();
	while (resultRec.next()) {
		//Check permissions. If user is allowed, build HTML link to return
		if (resultRec.canRead()){
			var link = '';
			link += '&lt;table&gt;&lt;tr&gt;';
			//Add 'Link' button w/ onClick function
			//onClick function declared in Client script field
			//Manage button styles
			var setColor = '#E6E8EA'; //Medium gray
			var onStyle = ' style="background-color:' + setColor + ';"';
			var offStyle = '';
			var buttonStyle = offStyle;
			var linkButtonText = ' Link';
			if (isNew == 'false'){
				var currRec = new GlideRecord(tableName);
				if (currRec.get(currSysID)) {
					if (currRec.rfc.sys_id.toString() == resultRec.task.sys_id.toString()){
						linkButtonText = ' Is' + linkButtonText + 'ed';
						buttonStyle = onStyle;
					}
				}
			}
			link += '&lt;td style="padding-right:2px;padding-bottom:2px"&gt;&lt;button' + buttonStyle + ' type="button" class="btn btn-default btn-xs" title="Link Change Request to Incident" onclick="linkRecCHG(\'' + resultRec.task.sys_id.toString() + '\');"&gt;&lt;span class="glyphicon glyphicon-link" aria-hidden="true"&gt;&lt;/span&gt;' + linkButtonText + '&lt;/button&gt;&lt;/td&gt;';
			//Add 'Caused by' button w/ onClick function
			//onClick function declared in Client script field
			buttonStyle= offStyle;
			var causedByButtonText = ' Caused by';
			if (isNew == 'false'){
				if (currRec.caused_by.sys_id.toString() == resultRec.task.sys_id.toString()){
					causedByButtonText = ' Is' + causedByButtonText;
					buttonStyle = onStyle;
				}
			}
			link += '&lt;td style="padding-right:10px;padding-bottom:2px"&gt;&lt;button' + buttonStyle + ' type="button" class="btn btn-default btn-xs" title="Set Incident to Caused by this Change" onclick="causedBy(\'' + resultRec.task.sys_id.toString() + '\');"&gt;&lt;span class="glyphicon glyphicon-fire" aria-hidden="true"&gt;&lt;/span&gt;' + causedByButtonText + '&lt;/button&gt;&lt;/td&gt;';
			//Start record link
			link += '&lt;td style="padding-bottom:5px"&gt;&lt;a href="' + recordTypeLink + '.do?sys_id=' + resultRec.task.sys_id.toString() + '" tabindex="-1" target="_blank" ';
			//Add hover preview functionality
			link += 'onmousemove="popRecordDiv(event, \'' + recordTypeLink + '\', \''+ resultRec.task.sys_id + '\');" onmouseout="lockPopupID(event, \'' + resultRec.task.sys_id + '\');" ';
			//Continue link
			link += 'onclick="sendLogEntry(\'conversion\', this.getAttribute(\'href\'));popupOpenStandard(\'' + recordTypeLink + '.do?sys_id=' + resultRec.task.sys_id.toString() + '\'); return false;"&gt;' + resultRec.task.number + '   -   ' + resultRec.task.short_description + '&lt;/a&gt;&lt;/td&gt;';
			//Close out section
			link += '&lt;/tr&gt;&lt;/table&gt;';
			//Push the full search result HTML link onto the return array
			returnArray.push(link);
		}
	}
}
catch(errCI){
	gs.info('OneSearch: Invalid var used in section script');
	returnArray = ['Search Error'];
}

if (debug == 'true')
	gs.info('Onesearch: Results of CHG script = ' + returnArray.toString());
answer = returnArray;]]&gt;&lt;/script&gt;
