        &lt;client_script&gt;&lt;![CDATA[/*** Client-side functions utilized in the Results script HTML ***/
function linkRecCHG(sysID){
	var isFieldHere = (g_form.getControl('rfc') != null);
	if (isFieldHere){
		if (g_form.getValue('rfc') != sysID){
			g_form.setValue('rfc',sysID);
			g_form.addInfoMessage('"Change Request" field updated - Save record to finalize.');
		}
	}
	else
		g_form.addErrorMessage('Unable to set the "Change Request" field because it is not available on this form.');
}
function causedBy(sysID){
	var isFieldHere = (g_form.getControl('caused_by') != null);
	if (isFieldHere){
		if (g_form.getValue('caused_by') != sysID){
			g_form.setValue('caused_by',sysID);
			g_form.addInfoMessage('"Caused by Change" field updated - Save record to finalize.');
		}
	}
	else
		g_form.addErrorMessage('Unable to set the "Caused by Change" field because it is not available on this form.');
}]]&gt;&lt;/client_script&gt;
